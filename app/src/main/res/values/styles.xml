<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="circularImage">
        <item name="cornerSize">15%</item>
        <item name="cornerFamily">rounded</item>
        <item name="elevation">20dp</item>
        <item name="android:elevation">20dp</item>
    </style>

    <style name="CalenderViewDateCustomText">
        <item name="android:textColor">@drawable/date_selector</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/purple</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomTimePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:timePickerStyle">@style/CustomTimePickerStyle</item>
    </style>

    <style name="CustomTimePickerStyle" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:colorAccent">@color/purple</item>
    </style>
</resources>